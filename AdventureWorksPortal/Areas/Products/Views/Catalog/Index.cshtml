@model IEnumerable<AdventureWorks.Domain.ModelObjects.Entities.Product>

@{
    ViewBag.Title = "Products";
}

<h2>@ViewBag.Title Index</h2>

<p>
    @Html.ActionLink("New Product", "Create", null, new { @class = "btn btn-sm btn-primary" })
</p>
<table id="products" class="table table-striped table-bordered table-condensed">

    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Color)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StandardCost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ListPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Size)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitMeasure.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Weight)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitMeasure1.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductSubcategory.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductModel.Name)
        </th>
        <th></th>
    </tr>
    </thead>

    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Color)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StandardCost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ListPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Size)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UnitMeasure.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Weight)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UnitMeasure1.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductSubcategory.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductModel.Name)
        </td>
        <td>
            <div class="btn-group">
                <button type="button" class="btn btn-sm dropdown-toggle" data-toggle="dropdown">
                    Actions
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    <li>@Html.ActionLink("Edit", "Edit", new { id = item.ProductID })</li> 
                    <li>@Html.ActionLink("Details", "Details", new { id = item.ProductID })</li> 
                    <li>@Html.ActionLink("Delete", "Delete", new { id = item.ProductID })</li>
                </ul>
            </div>
        </td>
    </tr>
}
    </tbody>
</table>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#products').dataTable();
        });
    </script>
}
